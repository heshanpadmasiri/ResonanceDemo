<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.heshan.resonancedemo.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RIGHT"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="182dp" />

        <Button
            android:id="@+id/btn_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORWARD" />

        <Button
            android:id="@+id/btn_backward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACKWARD" />

        <Button
            android:id="@+id/btn_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speak" />

        <Button
            android:id="@+id/btn_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS" />

        <TextView
            android:id="@+id/lbl_paired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paird devices" />

        <ListView
            android:id="@+id/lst_paird"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </ListView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Head Band Readings" />

        <TextView
            android:id="@+id/txt_headbandreadings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="headband_readings_array" />

        <TextView
            android:id="@+id/txt_headband_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headband Battery" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stick readings" />

        <TextView
            android:id="@+id/txt_stick_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stick Battery" />

        <TextView
            android:id="@+id/txt_stick_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stick Distance" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
